* 
	padding: 0
	margin: 0
	font-family: 'Overlock', cursive
	
h1
	font-family: 'Sansita', sans-serif
	font-size: 30px
h2
	font-family: 'Sansita', sans-serif
	font-size: 30px
img
	max-width: 100%
.Header 
	background-color: #ef5033
	&-container
		display: flex
		justify-content: space-between
		&-logo
			padding: 20px
			img
				width: 200px
				
		
nav
	width: 300px
	background: #353535
	position: fixed
	right: 0
	top: 0
	height: 100vh
	box-sizing: border-box
	z-index: 10
	box-shadow: -2px 2px 2px 1px #000000
	.Logo
		height: 157px
		box-sizing: border-box
		background-color: #000000
		img
			margin-top: 20px
	.Menu-close
		position: absolute
		bottom: 0
		width: 100%
		background-color: #000000
		text-align: center
		span
			color: white
			font-weight: 900
			font-size: 20px
	ul
		display: flex
		justify-content: space-around
		flex-direction: column
		list-style:none
		li 
			padding: 10px 30px 
			border-top: 1px solid black
			
			&:last-child
				border-bottom: 1px solid black
			a 
				text-decoration: none
				color: #ffffff
				font-size: 15px
				font-weight: 900
				
main
	background-color: #f9f9f9
	.Card
		position: relative
		margin: .5rem 0 1rem 0
		background-color: #fff
		transition: box-shadow .25s
		border-radius: 2px
		box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px
		margin: 20px
		&-text 
			padding: 24px
			border-radius: 0 0 2px 2px
			p 
				text-align: justify
		
	.Content
		width: 90%
		max-width: 1000px
		margin: 0 auto
		box-sizing: border-box
		padding: 20px
		
		&-team
			box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px
			padding: 20px
			margin: 20px
			background-color: white
			p 
				padding: 10px
			ul
				padding-left: 40px
				list-style: decimal
			ol
				padding-left: 40px
				list-style: lower-alpha
				
				li 
					font-weight: 900
			.List-Card
				display: -webkit-flex
				display: flex				
				.Card
					flex: 1 0 0
					&.large-8
						max-width: 50%
						margin: 0 auto
				
			&-img
				max-width: 600px
				margin: 0 auto
				display: block
				
.large-6
	width: 50%

		